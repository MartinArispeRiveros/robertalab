FROM rbudde/openroberta_meta:latest

ARG LAST_RUN_FROM_HERE=2017-11-27-22:00:00

WORKDIR /opt
RUN wget -q https://github.com/OpenRoberta/robertalab/archive/develop.zip && \
    unzip develop.zip && \
    rm develop.zip

WORKDIR /opt/robertalab-develop/OpenRobertaParent
RUN mvn clean install -DskipTests -DskipITs
WORKDIR /opt/robertalab-develop

CMD ["/opt/robertalab-develop/ora.sh", "--dockerE"]
